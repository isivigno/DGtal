template <typename T,  typename P>
inline
bool 
DGtal::PredicateCWSeparableMetric<T,P>::hiddenByPower(const Point &u, 
								  const Weight &w1u,
								  const Weight &w2u,
								  const Point &v,
								  const Weight &w1v,
								  const Weight &w2v,
								  const Point &w, 
								  const Weight &w1w,
								  const Weight &w2w,
								  const Point &startingPoint,
								  const Point &endPoint,
								  const typename Point::UnsignedComponent dim) const
{
  //Interval bound for the binary search
  Abscissa lower = startingPoint[dim];
  Abscissa upper = endPoint[dim];
  
  //Partial norm computation
  // (sum_{i!=dim}  |u_i-v_i|^p
  Promoted nu = 0;
  Promoted nv = 0;
  Promoted nw = 0;
  // Promoted nu = -wu;
  // Promoted nv = -wv;
  // Promoted nw = -ww;
  for(DGtal::Dimension i  = 0 ; i < Point::dimension ; i++)
    if (i != dim)
      {
        nu += functions::power ( static_cast<Promoted>(abs(u[i] - startingPoint[i])), 2);
        nv += functions::power ( static_cast<Promoted>(abs(v[i] - startingPoint[i])), 2);
        nw += functions::power ( static_cast<Promoted>(abs(w[i] - startingPoint[i])), 2);
      }

  //Abscissa of voronoi edges
  Abscissa uv,vw;
  Promoted dv,dw,du,ddv,ddw;
   
  //checking distances to lower bound
  
  for(DGtal::Dimension i  = 0 ; i <= Point::dimension ; i++)
    if (i != dim)
      {
        du += functions::power ( static_cast<Promoted>(abs(u[i] - startingPoint[i])), 2);
        dv += functions::power ( static_cast<Promoted>(abs(v[i] - startingPoint[i])), 2);
        dw += functions::power ( static_cast<Promoted>(abs(w[i] - startingPoint[i])), 2);
      }
  // Compute "true" distance defore any comparison
  du = (sqrt(du)-w1u)/(w2u-w1u);
  dv = (sqrt(dv)-w1v)/(w2v-w1v);
  dw = (sqrt(dw)-w1w)/(w2w-w1w);
  

  //Precondition of binarySearchHidden is true
  if (du < dv )
    {
      uv = binarySearchHidden(u[dim],v[dim],nu,w1u,w2u,nv,w1v,w2v,lower,upper);
      if (dv < dw)
        {
          vw = binarySearchHidden(v[dim],w[dim],nv,w1v,w2v,nw,w1w,w2w,lower,upper); //precondition
          return (uv > vw);
        }

      if (dw > dv)
        return true; 
      else
        {
          //check if uv + 1 is stricly in W
       
          //first, optimisation
          if (uv == upper) return true;
          
          //distances at uv+1
          ddv = nv + functions::power( static_cast<Promoted>(abs( v[dim] - uv -1)), 2);
          ddw = nw + functions::power( static_cast<Promoted>(abs( w[dim] - uv -1)), 2);
          ddv = (sqrt(ddv)-w1v)/(w2v-w1v);
	  ddw = (sqrt(ddw)-w1w)/(w2w-w1w);
	  if (ddw < ddv)
            return true;
          else
            return false;
        }
    }
  else  // du >= dv
    {
      if (dv <= dw)
        return false;
      else
        return true;
    }
}



