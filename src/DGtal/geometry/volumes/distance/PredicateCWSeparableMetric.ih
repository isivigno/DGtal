//------------------------------------------------------------------------------
template <typename T, typename P>
inline
typename DGtal::PredicateCWSeparableMetric<T,P>::Promoted
DGtal::PredicateCWSeparableMetric<T,P>::DistanceRepresentation (const Point &aP,
										 const Point &aQ) const
{
  // L2 distance
  Promoted res= NumberTraits<Promoted>::ZERO;
  for(DGtal::Dimension d=0; d< Point::dimension ; ++d)
    {
      res += functions::power(static_cast<Promoted>(abs(aP[d]-aQ[d])), 2);
    }
  return sqrt(res);
}
//------------------------------------------------------------------------------
template <typename T, typename P>
inline
typename DGtal::PredicateCWSeparableMetric<T,P>::Weight
DGtal::PredicateCWSeparableMetric<T,P>::CWDistance (const Point &aP,
							 const Point &aQ,
							 const Weight &aW1,
							 const Weight &aW2
							 ) const
{
  ASSERT(aW2 > aW1);
  return (DistanceRepresentation(aP,aQ) - aW1)/(aW2-aW1);
}
