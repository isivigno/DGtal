  template <typename T,  typename P>
inline
typename DGtal::PredicateCWSeparableMetric<T,P>::Abscissa 
  DGtal::PredicateCWSeparableMetric<T,P>::binarySearchHidden(const Abscissa &udim, 
							     const Abscissa &vdim,
							     const Promoted &nu,
							     const Weight &w1u,
							     const Weight &w2u,
							     const Promoted &nv,
							     const Weight &w1v,
							     const Weight &w2v,
							     const Abscissa &lower,
							     const Abscissa &upper) const
  {   
    ASSERT(  (nu +  functions::power( static_cast<Promoted>(abs( udim - lower)), 2)) <
           (nv +  functions::power( static_cast<Promoted>(abs( vdim - lower)), 2)));
  
  //Recurrence stop 
  if ( (upper - lower) <= NumberTraits<Abscissa>::ONE)
    {
      //testing upper
      Promoted nuUpdated = nu +  functions::power( static_cast<Promoted>(abs( udim - upper )), 2);
      Promoted nvUpdated = nv +  functions::power( static_cast<Promoted>(abs( vdim - upper )), 2);
      nuUpdated = (sqrt(nuUpdated) - w1u)/(w2u-w1u);
      nvUpdated = (sqrt(nvUpdated) - w1v)/(w2v-w1v);
      if (nuUpdated < nvUpdated)
        return upper;
      else
        return lower;
    }
  
  Abscissa mid = (lower + upper)/2;
  Promoted nuUpdated = nu +  functions::power( static_cast<Promoted>(abs( udim - mid )), 2);
  Promoted nvUpdated = nv +  functions::power( static_cast<Promoted>(abs( vdim - mid )), 2);
  
  nuUpdated = (sqrt(nuUpdated) - w1u)/(w2u-w1u);
  nvUpdated = (sqrt(nvUpdated) - w1v)/(w2v-w1v);
  //Recursive call
  if ( nuUpdated < nvUpdated)
    return binarySearchHidden(udim,vdim,nu,nv,mid,upper);
  else
    return binarySearchHidden(udim,vdim,nu,nv,lower,mid);
}


